<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="vertical"
            android:background="@drawable/main_backgroud"
            tools:context=".Fragments.ContactFragment">


            <ImageView
                android:layout_width="200dp"
                android:layout_height="100dp"
                android:src="@drawable/logo"
                android:layout_gravity="center_horizontal"/>


            <Space
                android:layout_width="match_parent"
                android:layout_height="100dp" />

            <Button
                android:id="@+id/entrer"
                android:layout_width="250dp"
                android:layout_height="50dp"
                android:background="@drawable/rounded"
                android:text="ENTRER"
                android:textColor="#FFFF"
                android:textStyle="bold"
                android:textSize="15sp"
                android:gravity="center"
                android:layout_gravity="center"/>
            <Space
                android:layout_width="match_parent"
                android:layout_height="40dp" />
            <Button
                android:id="@+id/simulateur"
                android:layout_width="250dp"
                android:layout_height="50dp"
                android:background="@drawable/rounded"
                android:text="SIMULATEUR DE CREDITS"
                android:textColor="#FFFF"
                android:textStyle="bold"
                android:textSize="15sp"
                android:gravity="center"
                android:layout_gravity="center"/>
            <Space
                android:layout_width="match_parent"
                android:layout_height="40dp" />
            <Button
                android:id="@+id/dev"
                android:layout_width="250dp"
                android:layout_height="50dp"
                android:background="@drawable/rounded"
                android:text="COURS DE DEVISES"
                android:textColor="#FFFF"
                android:textStyle="bold"
                android:textSize="15sp"
                android:gravity="center"
                android:layout_gravity="center"/>
            <Space
                android:layout_width="match_parent"
                android:layout_height="150dp" />
            <ImageButton
                android:layout_width="200dp"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:background="@drawable/pl"/>


        </LinearLayout>

</layout>